<div>
    <h3>{{iter.fullName}}</h3>
    <h4><b>Type: </b>{{iter.type}}</h4>
    <h4><b>Expansionism: </b>{{iter.expansionism}}</h4>
    <h4><b>Color: </b>
        <span style="background-color: {{iter.color}};"> {{iter.color}}</span>
    </h4>
    <h4><b>Culture:</b> @Compendium[world.Cultures.{{iter.culture.journal.id}}]</h4>
    <h4><b>Urban: </b>{{iter.urban}}</h4>
    <h4><b>Rural: </b>{{iter.rural}}</h4>
    <h4><b>Number of Burgs: </b>{{iter.burgs}}</h4>
    <h4><b>Area: </b>{{iter.area}}</h4>
    <h4><b>Form: </b>{{iter.form}}</h4>
    <h4><b>Government: </b>{{iter.formName}}</h4>
    <details>
        <summary>Provinces</summary>
        <ul>
            {{#each iter.selProvinces}}
                <li><span>@Compendium[world.Provinces.{{this.journal.id}}]</span></li>
            {{/each}}
        </ul>
    </details>

    <details>
        <summary>Military Overview</summary>

        <table>
            <tr>
                <th>Military</th>
                <th>
                    <div class="tooltip">
                        <span>⚔️</span>
                        <span class="tooltiptext">Infantry</span>
                    </div>
                </th>
                <th>
                    <div class="tooltip">
                        <span>🏹</span>
                        <span class="tooltiptext">Archers</span>
                    </div>
                </th>
                <th>
                    <div class="tooltip">
                        <span>🐴</span>
                        <span class="tooltiptext">Cavalry</span>
                    </div>
                </th>
                <th>
                    <div class="tooltip">
                        <span>💣</span>
                        <span class="tooltiptext">Artillery</span>
                    </div>
                </th>
                <th>
                    <div class="tooltip">
                        <span>🌊</span>
                        <span class="tooltiptext">Fleet</span>
                    </div>
                </th>

                {{!
                TODO: Figure out if these are EVER actually used, if so we need to support it!
                💪
                <th>🦄</th>
                <th>🦅</th>
                <th>🧙</th>

                <th>Knights</th>
                <th>Flying</th>
                <th>Magic</th> }}

            </tr>
            {{#each iter.military}}
                <tr>
                    <th>{{this.name}}</th>
                    <td>{{this.u.infantry}}</td>
                    <td>{{this.u.archers}}</td>
                    <td>{{this.u.cavalry}}</td>
                    <td>{{this.u.artillery}}</td>
                    <td>{{this.u.fleet}}</td>
                </tr>
            {{/each}}
        </table>
    </details>

    <table>
        <tr>
            <th></th>
            {{#each extras.countries}}
                {{!-- we don't have a relation to ourself, so don't include "us" --}}
                {{#if (ne this.name ../iter.name)}}
                    <th class="rotate">
                        <div><span>{{this.name}}</span></div>
                    </th>
                {{/if}}
            {{/each}}
        </tr>
        <tr>
            <th class="rotate-90">{{iter.fullName}}</th>
            {{#each iter.diplomacy}}
                <td>
                    "{{this}}"

                    {{!--
                        <div class="tooltip">

                            {{#if this === "Ally"}}
                                <th> 🛡️</th>
                                <span class="tooltiptext">Ally</span>
                            {{/if}}
                            {{#if this === "Friendly"}} <th>🤝 </th> <span class="tooltiptext">Friendly</span>{{/if}}
                            {{#if this === "Neutral"}} <th>😐 </th> <span class="tooltiptext">Neutral</span>{{/if }}
                            {{#if this === "Suspicion"}} <th> 👀</th> <span class="tooltiptext">Suspicion</span>{{/if }}
                            {{#if this === "Enemy"}} <th>😡 </th> <span class="tooltiptext">Enemy</span>{{/if }}
                            {{#if this === "Unknown"}} <th> ❓</th> <span class="tooltiptext">Unknown</span>{{/if }}
                            {{#if this === "Rival"}} <th>✊ </th> <span class="tooltiptext">Rival</span>{{/if}}
                            {{#if this === "Vassal"}} <th>🎩 </th> <span class="tooltiptext">Vassal</span>{{/if}}
                            {{#if this === "Suzerain"}} <th>👞 </th> <span class="tooltiptext">Suzerain</span>{{/if}}

                        </div>
                    --}}
                </td>
            {{/each}}
        </tr>
    </table>
</div>