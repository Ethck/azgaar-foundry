        <details>
        <summary>
            Relationships
        </summary>
        <table>
            <tr>
                <th>
                    <div class="tooltip">
                        <span class="tooltiptext">Country</span>
                    </div>
                </th>
                <th>
                    <div class="tooltip">
                        <span class="tooltiptext">Current Feelings</span>
                    </div>
                </th>
            </tr>
            {{#each iter.relationships}}
                <tr>
                    <th>{{this.refCountry}}</th>
                    <td>{{this.Status}}</td>
                </tr>
            {{/each}}
        </table>
    </details>
    <details>
        <summary>
            Campaigns
        </summary>
        <table>
            <tr>
                <th>
                    <div class="tooltip">
                        <span class="tooltiptext">Campaign</span>
                    </div>
                </th>
                <th>
                    <div class="tooltip">
                        <span class="tooltiptext">Start Date</span>
                    </div>
                </th>
                <th>
                    <div class="tooltip">
                        <span class="tooltiptext">End Date</span>
                    </div>
                </th>
            </tr>
            {{#each iter.campaigns}}
                <tr>
                    <th>{{this.name}}</th>
                    <td>{{this.start}}</td>
                    <td>{{this.end}}</td>
                </tr>
            {{/each}}
        </table>
