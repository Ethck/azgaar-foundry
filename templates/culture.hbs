<div>
    <h3>{{iter.name}}</h3>
    <h4>Type: {{iter.type}}</h4>
    <h4>Expansionism: {{iter.expansionism}}</h4>
    <h4>Color: {{iter.color}}</h4>
    <h4>Code: {{iter.code}}</h4>
    <details>
        <summary>Provinces</summary>
        <ul>
            {{#each iter.Religions}}
                <li><span>@Compendium[world.Religions.{{this.i}}]</span></li>
            {{else}}
                <li><span>@Compendium[world.Religions.0]</span></li>
            {{/each}}
        </ul>
    </details>
</div>